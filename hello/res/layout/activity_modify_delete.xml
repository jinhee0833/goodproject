<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helloants.mm.helloants3.activity.ModifyDelete">

    <RelativeLayout
        android:id="@+id/layout_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/helloants_yellow"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_btn_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/helloants_yellow"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txv_title_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_btn_md"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12pt" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="1. 거래 유형을 선택하세요."
                android:textAlignment="center"
                android:textSize="12pt" />

            <Spinner
                android:id="@+id/spiner_left_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:id="@+id/txv_choice_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/spiner_right_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:id="@+id/txv_new_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textSize="10pt" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_price_modifydelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="금액"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_where_modifydelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="메모"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>


            <DatePicker
                android:id="@+id/datepick_isdate_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"></DatePicker>

            <TimePicker
                android:id="@+id/timepick_isdate_modifydelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TimePicker>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_delete_modifydelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="삭제" />

                <Button
                    android:id="@+id/btn_modify_modifydelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="수정완료" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
